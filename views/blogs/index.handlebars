<h1>Blogs</h1>
<div class="row">
    {{#each blogs}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{#if user}}
                        {{{editIcon user.id ../user.id id}}}
                    {{/if}}
                </div>
                <div class="card-content center-align">
                    <h5>{{title}}</h5>
                    <p class="blog-text">{{stripTags (truncate body 150)}}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}" alt="Login Member">
                        {{user.firstName}} {{user.lastName}}
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/blogs/show/{{id}}" class="btn grey"><i class="fas fa-glasses"></i> Read More</a>
                </div>
            </div>
        </div>
    {{else}}
        <p>No blogs found</p>
    {{/each}}
</div>