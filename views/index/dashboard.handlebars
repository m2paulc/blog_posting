<h1>Welcome {{user.firstName}}</h1>
<h4>Your Blogs</h4>
{{#if blogs}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each blogs}}
                <tr>
                    <td><a href="/blogs/show/{{id}}">{{title}}</a></td>
                    <td>{{formatDate blog.date 'MMMM Do YYYY'}}</td>
                    <td><span class="dash-status">{{status}}</span></td>
                    <td>
                        <a class="btn left-align" href="/blogs/edit/{{id}}"><i class="fas fa-pencil-alt"></i> Edit</a>
                        <form action="/blogs/{{id}}?_method=DELETE" method="POST" id="delete-blog">
                            <input type="hidden" name="_method" value="DELETE"></input>
                            <button type="submit" class="btn red">Delete <i class="fa fa-times"></i></button>
                        </form>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>You have not created any blogs yet.</p>
{{/if}}