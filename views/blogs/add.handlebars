<h1>Add Blogs</h1>
<div class="row">
    <form action="/blogs" method="post" class="col s12">
        <div class="row">
            <div class="input-field">
                <input type="text" name="title"></input>
                <label for="title">Title</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12 m6">
                <select name="status">
                    <option value="" disabled selected>Choose your option</option>
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    <option value="unpublished">Unpublished</option>
                </select>
                <label for="status">Status</label>
            </div>
        </div>
        
        <div class="row">
            <p>
                <label>
                    <input type="checkbox" name="allowComments" class="filled-in" id="filled-in-box" checked="checked"></input>
                    <span>Allow Comments</span>
                </label>
            </p>
        </div>
        
        <div class="row">
            <div class="input-field">
                <h5>Tell us Your Story</h5>
                <textarea type="text" name="body"></textarea>
            </div>
        </div>
        <input type="submit" value="Save" class="btn"></input>
    </form>
</div>